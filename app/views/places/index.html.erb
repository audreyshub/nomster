<div id="carousel-example-generic" class="carousel slide" data-ride="carousel">
  <!-- Indicators -->
  <ol class="carousel-indicators">
    <li data-target="#carousel-example-generic" data-slide-to="0" class="active"></li>
    <li data-target="#carousel-example-generic" data-slide-to="1"></li>
    
  </ol>

  <!-- Wrapper for slides -->
  <div class="carousel-inner" role="listbox">
    <div class="item active">
      <%= image_tag 'Nom.jpg', :class => 'img-responsive' %>
      
    </div>

     
    

    <div class="item">
      <%= image_tag 'slider2.jpg', :class => 'img-responsive'  %>
      
    </div>
    
  </div>

  <!-- Controls -->
</div> 

<% @places.each do |place| %>
	<div class="booyah-box col-xs-10 col-xs-offset-1">
		<h1><%= link_to place.name, place_path(place) %></h1>
		<i><%= place.address %></i><br /><br />
		<p><%= place.description %></p><br />

		<% if place.user.present? %>
			<small><%= place.user.email %></small>
		<% end %>

		

		<% if place.comments.present? %>
			<div class="col-xs-12">
				<blockquote>
					<% if place.comments.first.humanized_rating.present? %>
						<b><%= place.comments.first.humanized_rating %></b> -
					<% end %>
					<%= place.comments.first.message %>
					<small><%= place.comments.first.user.email %></small>
				</blockquote>
			</div>
		<% end %>

		<% if place.photos.present? %>
		<div class="col-xs-12">
			
				<%= image_tag place.photos.first.picture %>
				<%= place.photos.first.caption %>
			
		</div>	
		<% end %>



	</div>	
<% end %>

<div class="will_pagination">
		<%= will_paginate @places, :page_links => true %>
</div>